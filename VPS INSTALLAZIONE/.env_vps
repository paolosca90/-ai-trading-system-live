# ðŸ”§ VPS TRADING SYSTEM - CONFIGURATION
# Configurazione completa per il sistema AI Trading su VPS

# ===== METATRADER 5 CONFIGURATION =====
# Il server del broker (esempio: "MetaQuotes-Demo", "ICMarkets-MT5", etc.)
MT5_BROKER_SERVER=MetaQuotes-Demo

# Credenziali account MT5 (SOSTITUIRE CON I TUOI DATI REALI)
MT5_LOGIN=123456
MT5_PASSWORD=password123

# Porta per il bridge MT5 (default: 8000)
MT5_BRIDGE_PORT=8000
BRIDGE_HOST=0.0.0.0

# ===== GEMINI AI CONFIGURATION =====
# API Key per Gemini AI (ottenere da: https://makersuite.google.com/app/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# ===== DATABASE CONFIGURATION =====
# Database locale VPS per i segnali
DATABASE_VPS_URL=sqlite:///vps_trading.db

# ===== TRADING PARAMETERS =====
# Soglia minima affidabilitÃ  segnali (70-100)
MIN_RELIABILITY_THRESHOLD=70

# Massimo numero segnali per ora
MAX_SIGNALS_PER_HOUR=5

# Simboli trading prioritari (separati da virgola)
PRIORITY_SYMBOLS=EURUSD,GBPUSD,USDJPY,XAUUSD,XAGUSD

# ===== TECHNICAL ANALYSIS SETTINGS =====
# Periodi per indicatori tecnici
RSI_PERIOD=14
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9
BOLLINGER_PERIOD=20
ATR_PERIOD=14

# Soglie per segnali di trading
MIN_SCORE_BUY=35
MIN_SCORE_SELL=-35

# ===== SYSTEM CONFIGURATION =====
# Livello log (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Intervallo aggiornamento segnali (secondi)
SIGNAL_UPDATE_INTERVAL=60

# Intervallo health check (secondi)
HEALTH_CHECK_INTERVAL=30

# ===== ADVANCED SETTINGS =====
# Abilita Machine Learning
ML_ENABLED=true
ML_CONFIDENCE_THRESHOLD=0.75

# Abilita Gemini AI per spiegazioni
GEMINI_ENABLED=true

# Auto-restart falliti processi
AUTO_RESTART=true

# Backup automatico database
AUTO_BACKUP=true
BACKUP_INTERVAL_HOURS=24

# ===== SICUREZZA =====
# JWT Secret per autenticazione (generare stringa casuale lunga)
JWT_SECRET_KEY=your_super_secret_jwt_key_here_change_this

# ===== NOTIFICHE =====
# Email per notifiche sistema (opzionale)
ADMIN_EMAIL=your-email@example.com

# ===== RAILWAY INTEGRATION =====
# URL del sistema Railway per sincronizzazione
RAILWAY_API_URL=https://web-production-51f67.up.railway.app

# ===== PERFORMANCE TUNING =====
# Worker threads per analisi
ANALYSIS_WORKERS=4

# Cache size per quotes
QUOTE_CACHE_SIZE=1000

# Timeout connessioni (secondi)
HTTP_TIMEOUT=30

# ===== DEVELOPMENT/DEBUG =====
# ModalitÃ  debug (true/false)
DEBUG_MODE=false

# Salva dati raw per debug
SAVE_RAW_DATA=false

# Log dettagliato trading
VERBOSE_TRADING_LOG=false